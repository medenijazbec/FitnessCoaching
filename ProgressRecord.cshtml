@page
@model Fitness.Pages.ProgressRecordModel
@{
    ViewData["Title"] = "Progress Record";
}

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">

<div class="container mt-5">
    <h2 class="mb-4">Progress Record</h2>


     <form method="post" class="needs-validation" novalidate>
            <div class="form-group">
                <label for="date">Date:</label>
                <input type="datetime-local" class="form-control" id="date" asp-for="NewProgressRecord.Date"
                       required min="2024-01-01T00:00" value="2024-01-01T00:00" />
            </div>


        <div class="form-group">
            <label for="notes">Notes:</label>
            <textarea class="form-control" id="notes" asp-for="NewProgressRecord.Notes" rows="3" required></textarea>
        </div>

        <div class="form-group">
            <label for="measurementKey">Measurement Type:</label>
            <input type="text" class="form-control" id="measurementKey" asp-for="MeasurementKey" required />
        </div>

        <div class="form-group">
            <label for="measurementValue">Value:</label>
            <input type="number" class="form-control" id="measurementValue" asp-for="MeasurementValue" step="0.1" required />
        </div>

        <button type="submit" class="btn btn-primary">Add Measurement</button>
    </form>

    @if (Model.NewProgressRecord != null)
    {
        <div class="mt-5">
            <h3>Your Progress Record:</h3>
            <p>Date: @Model.NewProgressRecord.Date.ToString("g")</p>
            <p>Notes: @Model.NewProgressRecord.Notes</p>
            <h4>Measurements:</h4>
            <ul class="list-unstyled">
                @foreach (var measurement in Model.NewProgressRecord.Measurements)
                {
                    <li class="p-2 border-bottom">@measurement.Key: @measurement.Value</li>
                }
            </ul>
        </div>
    }
</div>

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>