@page
@model Fitness.Pages.DietItemModel

<h2>Add Diet Item</h2>

<form method="post">
    <label asp-for="NewDietItem.ItemName">Item Name:</label>
    <input asp-for="NewDietItem.ItemName" /><br />

    <label asp-for="NewDietItem.Calories">Calories:</label>
    <input asp-for="NewDietItem.Calories" /><br />

    <label asp-for="NewDietItem.Proteins">Proteins (g):</label>
    <input asp-for="NewDietItem.Proteins" step="0.1" /><br />

    <label asp-for="NewDietItem.Carbohydrates">Carbohydrates (g):</label>
    <input asp-for="NewDietItem.Carbohydrates" step="0.1" /><br />

    <label asp-for="NewDietItem.Fats">Fats (g):</label>
    <input asp-for="NewDietItem.Fats" step="0.1" /><br />

    <label asp-for="NewDietItem.MealTime">Meal Time:</label>
    <input asp-for="NewDietItem.MealTime" type="datetime-local" /><br />

    <button type="submit">Add</button>
</form>

@if (Model.NewDietItem != null)
{
    <div>
        <h3>Your Diet Item:</h3>
        <p>Item Name: @Model.NewDietItem.ItemName</p>
        <p>Calories (entered): @Model.NewDietItem.Calories</p>
        <p>Calories (calculated): @Model.CalculatedCalories</p> <!-- Display calculated calories -->
        <p>Proteins: @Model.NewDietItem.Proteins</p>
        <p>Carbohydrates: @Model.NewDietItem.Carbohydrates</p>
        <p>Fats: @Model.NewDietItem.Fats</p>
        <p>Meal Time: @Model.NewDietItem.MealTime.ToString("g")</p>
    </div>
}
