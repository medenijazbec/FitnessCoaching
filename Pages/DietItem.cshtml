@page
@model Fitness.Pages.DietItemModel

<h2>Add Diet Item</h2>

<form method="post">
    <label for="itemName">Item Name:</label>
    <input type="text" id="itemName" asp-for="NewDietItem.ItemName" /><br />

    <label for="calories">Calories:</label>
    <input type="number" id="calories" asp-for="NewDietItem.Calories" /><br />

    <label for="proteins">Proteins (g):</label>
    <input type="number" id="proteins" asp-for="NewDietItem.Proteins" step="0.1" /><br />

    <label for="carbohydrates">Carbohydrates (g):</label>
    <input type="number" id="carbohydrates" asp-for="NewDietItem.Carbohydrates" step="0.1" /><br />

    <label for="fats">Fats (g):</label>
    <input type="number" id="fats" asp-for="NewDietItem.Fats" step="0.1" /><br />

    <label for="mealTime">Meal Time:</label>
    <input type="datetime-local" id="mealTime" asp-for="NewDietItem.MealTime" /><br />

    <button type="submit">Add</button>
</form>

@if (Model.NewDietItem != null)
{
    <div>
        <h3>Your Diet Item:</h3>
        <p>Item Name: @Model.NewDietItem.ItemName</p>
        <p>Calories: @Model.NewDietItem.Calories</p>
        <p>Proteins: @Model.NewDietItem.Proteins</p>
        <p>Carbohydrates: @Model.NewDietItem.Carbohydrates</p>
        <p>Fats: @Model.NewDietItem.Fats</p>
        <p>Meal Time: @Model.NewDietItem.MealTime.ToString("g")</p>
    </div>
}

